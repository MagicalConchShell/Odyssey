{
  "name": "odyssey-electron",
  "version": "0.1.0",
  "description": "Odyssey - A powerful GUI app for Claude Code",
  "license": "AGPL-3.0",
  "type": "commonjs",
  "author": "Odyssey Team",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "npm run build && NODE_ENV=development electron .",
    "dev:watch": "node dev.js",
    "dev:electron": "npx tsc -p tsconfig.node.json --watch",
    "dev:renderer": "npx vite",
    "build": "npm run build:electron && npm run build:renderer",
    "build:electron": "npx tsc -p tsconfig.node.json",
    "build:renderer": "npx vite build",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "npx tsc --noEmit",
    "type-check:electron": "npx tsc -p tsconfig.node.json --noEmit",
    "lint": "npx eslint src/**/*.{ts,tsx}",
    "lint:fix": "npx eslint src/**/*.{ts,tsx} --fix",
    "quality-check": "npm run type-check && npm run type-check:electron && npm run lint",
    "pre-commit": "npm run quality-check"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.1.3",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.1.5",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-virtual": "^3.13.12",
    "@uiw/react-md-editor": "^4.0.7",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.0",
    "lucide-react": "^0.468.0",
    "micromatch": "^4.0.8",
    "node-pty": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.3",
    "react-syntax-highlighter": "^15.6.1",
    "recharts": "^3.0.2",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.6.0",
    "tw-animate-css": "^1.3.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.16.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "electron": "^19.1.9",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.asterisk.odyssey-electron",
    "productName": "Odyssey",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
